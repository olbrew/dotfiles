    name = olbrew
    email = olbrew@users.noreply.github.com
[credential]
    helper = osxkeychain
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = less -R
[stash]
    showPatch = true
[log]
    decorate = full
[gpg]
	program = /usr/local/bin/krgpg
[commit]
	gpgSign = true
[tag]
	forceSignAnnotated = true
[push]
    default = simple
    followTags = true
[alias]
    s = status
    a = add
    c = commit
    cm = commit -m
    d = diff
    pl = pull
    ps = push
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    co = checkout
    prune = fetch --prune
